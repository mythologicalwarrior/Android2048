<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IntroduceActivity"
    android:background="#BBFFFF">

    <TextView
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:text = "游戏介绍"
        android:textSize="60dp"
        android:textColor="#FFC0CB	"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:text="      《2048》是一款比较流行的数字游戏，最早于2014年3月20日发行。原版2048首先在GitHub上发布，原作者是Gabriele Cirulli，后被移植到各个平台。这款游戏是基于《1024》和《小3传奇》的玩法开发而成的新型数字游戏。"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button_fh"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="130dp"
        android:text="返回"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="@drawable/shape_fh"/>



</LinearLayout>